<script type="text/javascript">

  // Get all of the examples on the page
  var DialogExampleElements = document.querySelectorAll(".docs-DialogExample");

  // Go through the examples on the page
  for(var i = 0; i < DialogExampleElements.length; i++) {

    // For each example, get references to the dialog and the open button
    let example = DialogExampleElements[i];
    let button = example.querySelector(".docs-DialogExample-button");
    let dialog = example.querySelector(".ms-Dialog");
    
    // Wire up the dialog
    new fabric['Dialog'](dialog);

    // When clicking the button, open the dialog
    button.onclick = function() {
      openDialog(dialog);
    };

  }
  
  function openDialog(dialog) {
    // Open the dialog
    dialog.classList.add("is-open");

    // Center the dialog
    dialog.style.top = (window.innerHeight - dialog.offsetHeight) / 2 + 'px';
    dialog.style.left = (window.innerWidth - dialog.offsetWidth) / 2 + 'px';
  }

</script>
